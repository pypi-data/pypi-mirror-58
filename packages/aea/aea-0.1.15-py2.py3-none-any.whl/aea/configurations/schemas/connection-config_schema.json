{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for the connection configuration file.",
  "additionalProperties": false,
  "type": "object",
  "required": [
    "name",
    "author",
    "version",
    "license",
    "url",
    "class_name",
    "config",
    "protocols"
  ],
  "properties": {
    "name": {
      "$ref": "#/definitions/resource_name"
    },
    "author": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "license": {
      "type": "string"
    },
    "fingerprint": {
      "type": "string"
    },
    "url": {
      "type": "string"
    },
    "class_name": {
      "type": "string"
    },
    "protocols": {
      "type": "array",
      "additionalProperties": false,
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "restricted_to_protocols": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "excluded_protocols": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "config": {
      "type": "object"
    },
    "dependencies": {
      "$ref": "#/definitions/dependencies"
    },
    "description": {
      "type": "string"
    }
  },
  "definitions": {
    "dependencies": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^([A-Za-z0-9]|[A-Za-z0-9][A-Za-z0-9._-]*[A-Za-z0-9])$": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "index": {
              "type": "string",
              "pattern": "^http[s]?://(?:[a-zA-Z]|[0-9]|[$-_@.&+]|[!*\\(\\),]|(?:%[0-9a-fA-F][0-9a-fA-F]))+$"
            },
            "git": {
              "type": "string",
              "pattern": "^http[s]?://(?:[a-zA-Z]|[0-9]|[$-_@.&+]|[!*\\(\\),]|(?:%[0-9a-fA-F][0-9a-fA-F]))+$"
            },
            "ref": {
              "type": "string",
              "pattern": "^[A-Za-z0-9/\\.\\-_]+$"
            },
            "version": {
              "type": "string",
              "pattern": "^(( *(~=|==|>=|<=|!=|<|>) *)([1-9][0-9]*!)?(0|[1-9][0-9]*)(\\.(0|[1-9][0-9]*))*((a|b|rc)(0|[1-9][0-9]*))?(\\.post(0|[1-9][0-9]*))?(\\.dev(0|[1-9][0-9]*))?)?$"
            }
          }
        }
      }
    },
    "resource_name": {
      "type": "string",
      "pattern": "[a-zA-Z_][a-zA-Z0-9_]*"
    }
  }
}
