<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
    <dict>
        <key>KeepAlive</key>
        <dict>
            <key>SuccessfulExit</key>
            <false/>
        </dict>
        <key>RunAtLoad</key>
        <true/>
        <key>Label</key>
        <string>com.n8henrie.fauxmo</string>
        <key>ProgramArguments</key>
        <array>
            <string>/ABS/PATH/TO/fauxmo/.venv/bin/fauxmo</string>
            <string>-c</string>
            <string>/ABS/PATH/TO/fauxmo/config.json</string>
            <string>-v</string>
        </array>
        <key>StandardOutPath</key>
        <string>/ABS/PATH/TO/fauxmo.log</string>
        <key>StandardErrorPath</key>
        <string>/ABS/PATH/TO/faumo_error.log</string>
    </dict>
</plist>
